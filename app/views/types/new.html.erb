<%= provide(:title, "種目作成") %>
<%= content_for :page_header, "トレーニングメニュー作成" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 mx-auto">
      <%= form_with(url: types_path, method: :post) do |f| %>
        <%= f.label "トレーニング種目名" %>
        <%= f.text_field :type, class: 'form-control' %>
        <%= f.label "ターゲット部位" %>
        <%= f.collection_select :part, @part, :id, :name, {}, class: 'form-control' %>

        <%= f.submit "種目作成", data: { disable_with: "作成中..." }, class: "btn btn-primary type-create-button" %>
      <% end %>
    </div>
  </div>
</div>